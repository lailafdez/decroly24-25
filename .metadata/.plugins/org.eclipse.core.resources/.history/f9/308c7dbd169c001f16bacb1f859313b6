			System.out.println(num[i]);
		if (opcion == 'a') {
               System.out.print("Escribe un numero (entero): ");
               int valor = reader.nextInt();
               System.out.print("Introduzca una posición: ");
               int posicion = reader.nextInt();
		}
			
		
		}
